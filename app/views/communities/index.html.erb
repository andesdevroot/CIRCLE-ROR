<% if account_signed_in? %>
  <div class="float-right">
  <%= link_to "Create New Community", new_community_path, class: "btn btn-outline-primary" %>
  </div>
<% end %>

<% if @communities.size > 0 %>
<% @communities.each do |comunity| %>
<div class="card">
   <h3><%= link_to comunity.name, comunity %></h3>
   <%= simple_format comunity.bio %>
</div>
<% end %>
<% else %>

<p> No comunities to display</p>
<% end %>
